<div class="container p-2">
  <h1 class="tracking-title">Sika Seeker order  #<%= @order.id %> : <%= @order.status %> ⏳</h1>
    <div style="width: 100%; height: 400px;"
      data-controller="track-map"
      data-track-map-order-marker-value="<%= @order_marker %>"
      data-track-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

    <div class="card p-2 mt-1">
      <span>*Customer section</span>
 <div id="time"></div>
      <%# <h3 >Estimated delivery time: 35min/45min 🍜</h3> %>
        <div class="row 2">
          <div class="col">
            <ol>
              <li>→ Order processing</li>
              <li>→ Restaurant confirmed</li>
              <li>→ Courier confirmed</li>
              <li>→ Food in transit</li>
              <li>☑️ Delivery complete</li>
            </ol>

          </div>

          <div class="col">
            <ul>
              <li><%= @order.order_date %> /time</li>
              <li><%= @order.order_date %> /time</li>
              <li><%= @order.order_date %> /time</li>
              <li><%= @order.order_date %> /time</li>
              <li><%= @order.order_date %> /time</li>
            </ul>
            </div>
        </div>
          <h5 class="info p-4" style="color:orange;">ℹ️ If you selected 'Cash' as your payment method, you can sill pay the courier via ...</h5>
    <div class="row 2">
            <div class="col m-3 p-2"> <button class="btn btn-warning p-2">Browse Home</button></div>
            <div class="col m-3 p-2"><button class="btn btn-warning p-2">Order again</button></div>
        </div>

      <div class="card m-4 p-4">
        <div class="row 2">
            <div class="col"> 📞 Contact Restaurant</div>
            <div class="col">💬 Order Feedback</div>
        </div>
      </div>
       <hr>
        <span>*Driver section</span>
          <div id="directions"></div>
          <div id="instructions"></div>
        <h2>📍 <%= @order.address %></h2>
    </div>
    <div class="btn"><%= link_to "Home", orders_path %></div>
</div>

