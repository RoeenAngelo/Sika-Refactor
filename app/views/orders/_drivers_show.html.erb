<div class="container py-2">
    <div class="card py-2 px-2">
      <div class="card-body">
        <h2> Order #<%= @order.id %></h2>
        <h2> <%= @order.address %> </h2>
        <p class="fw-bold">Order items:</p>
        <% @order.order_items.each do |order_item| %>
        <div class="d-flex">
        <p><%= order_item.quantity %> x </p>
        <p>$<%= order_item.item.name  %></p>
        </div>
        <% end %>
        <div class="d-flex justify-content-between">
        <p class="fw-bold">Total:</p>
        <p>$<%= @order.total_price %></p>
        </div>
        <div class="d-flex justify-content-between">
        <p class="fw-bold">Order date:</p>
        <p><%= @order.order_date %></p>
        </div>
        <div class="show-btns d-flex justify-content-center mt-5">
        <button class="btn btn-success rounded me-5"><%= link_to "Accept order", accept_order_path(@order),
        style: "text-decoration:none; color: black;" , data: {turbo_method: :post, turbo_confirm: "Accept order?"}%></button>
        <button class="btn btn-danger rounded"><%= link_to "Decline order", decline_order_path(@order),
        style: "text-decoration:none; color: black", data: {turbo_method: :post, turbo_confirm: "Decline order?"}%></button>
      </div>
      </div>
    </div>
</div>
