<%= link_to order_path(order), class: "link" do  %>
  <div class="container py-2">
    <div class="card-product">
      <div class="card-product-infos">
        <h2> Order #<%= order.id %>: <%= order.address %> </h2>
        <p>$ <%= order.total_price %></p>
        <p><%= order.order_date %></p>
      </div>
    </div>
  </div>
<% end %>
